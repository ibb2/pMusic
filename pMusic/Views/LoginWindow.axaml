<shadUi:Window xmlns="https://github.com/avaloniaui"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:vm="using:pMusic.ViewModels"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               xmlns:shadUi="clr-namespace:ShadUI;assembly=ShadUI"
               mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
               x:Class="pMusic.Views.LoginWindow"
               x:DataType="vm:LoginViewModel"
               Icon="/Assets/avalonia-logo.ico"
               Title="pMusic">
    <Design.DataContext>
        <vm:LoginViewModel />
    </Design.DataContext>
    <Button Command="{Binding Login}" Classes="Flat Accent" HorizontalAlignment="Center" VerticalAlignment="Center">Login with Plex</Button>
</shadUi:Window>